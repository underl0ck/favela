---
interface Props {
  src: string;
  alt: string;
  className?: string;
  width?: number;
  height?: number;
  loading?: "eager" | "lazy";
}

const { 
  src, 
  alt, 
  className = '', 
  width, 
  height,
  loading = "lazy"
} = Astro.props;

const imageProps = {
  src,
  alt,
  width,
  height,
  loading,
  class: `${className} transition-opacity`,
  decoding: "async" as const,
};
---

<img {...imageProps} />