---
import HeaderLink from './HeaderLink.astro';
import ThemeToggle from './ThemeToggle.astro';
import { SITE_TITLE } from '../consts';
---

<header class="border-b border-terminal-green/30">
  <nav class="container mx-auto px-4 py-4">
    <div class="flex flex-col md:flex-row items-center justify-between gap-4">
      <h2 class="text-2xl font-mono flex items-center gap-3">
        <a href="/" class="text-terminal-green hover:text-terminal-dark transition-colors flex items-center gap-2">
          <img 
            src="/favela-hacker-logo.svg" 
            alt="Favela Hacker Logo" 
            width="40" 
            height="40"
            class="w-10 h-10"
            loading="eager"
          />
          <span class="font-bold">{SITE_TITLE}</span>
        </a>
      </h2>
      <div class="flex flex-wrap justify-center items-center gap-4 md:gap-6">
        <HeaderLink href="/">In√≠cio</HeaderLink>
        <HeaderLink href="/sobre">Sobre</HeaderLink>
        <HeaderLink href="/programa">Programa</HeaderLink>
        <HeaderLink href="/blog">Blog</HeaderLink>
        <HeaderLink href="/contato">Contato</HeaderLink>
        <ThemeToggle />
      </div>
    </div>
  </nav>
</header>