---
interface Props {
  title: string;
  description?: string;
  className?: string;
}

const { title, description, className = '' } = Astro.props;
---

<div class={`card backdrop-blur-sm ${className}`}>
  <h3 class="text-xl text-terminal-green mb-3">{title}</h3>
  {description && <p>{description}</p>}
  <slot />
</div>