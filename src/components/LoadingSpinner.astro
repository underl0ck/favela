---
interface Props {
  size?: 'sm' | 'md' | 'lg';
}

const { size = 'md' } = Astro.props;

const sizeClasses = {
  sm: 'w-4 h-4',
  md: 'w-8 h-8',
  lg: 'w-12 h-12'
};
---

<div class="flex justify-center items-center">
  <div class={`animate-spin rounded-full border-4 border-terminal-green border-t-transparent ${sizeClasses[size]}`}></div>
</div>