---
interface Props {
  size?: 'sm' | 'md' | 'lg';
  text?: string;
}

const { size = 'md', text = 'Carregando...' } = Astro.props;

const sizeClasses = {
  sm: 'w-4 h-4',
  md: 'w-8 h-8',
  lg: 'w-12 h-12'
};
---

<div class="flex flex-col items-center justify-center gap-4" role="status">
  <div class={`animate-spin rounded-full border-4 border-terminal-green border-t-transparent ${sizeClasses[size]}`} aria-hidden="true"></div>
  {text && <p class="sr-only">{text}</p>}
</div>